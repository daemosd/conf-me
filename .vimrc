filetype indent on

set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set autoindent
autocmd FileType html setlocal expandtab shiftwidth=2 tabstop=2 softtabstop=2
autocmd FileType python setlocal expandtab shiftwidth=4 tabstop=4 softtabstop=4

set term=builtin_ansi
set nocp

set number
set cursorline
syntax on
